                        app:switchToggleCheckedImage="@drawable/ic_check"
                        app:switchToggleNotCheckedColor="@color/toggleUnCheckedBackground"
                        app:switchToggleNotCheckedImage="@drawable/ic_clear" />

                </LinearLayout>


            </RelativeLayout>

            <!--        Magrib-->
            <RelativeLayout
                android:id="@+id/relativeLayoutMagrib"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_backgorund"
                android:elevation="7dp">

                <TextView
                    android:id="@+id/textViewMagrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/text_background"
                    android:text="مغرب"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="35dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewMagrib"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/buttonTimeStartMagrib"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape_un_checked"
                        android:elevation="10dp"
                        android:tag="magrib"
                        android:text="@string/default_text"
                        android:textColor="@android:color/white"
                        app:layout_widthPercent="50%" />

                    <Button
                        android:id="@+id/buttonTimeEndMagrib"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape_un_checked"
                        android:elevation="10dp"
                        android:tag="magrib"
                        android:text="@string/default_text"
                        android:textColor="@android:color/white"
                        app:layout_widthPercent="50%" />


                    <com.rm.rmswitch.RMSwitch
                        android:id="@+id/toggleSwitchMagrib"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        app:checked="false"
                        app:enabled="true"
                        app:switchBkgCheckedColor="@android:color/holo_green_dark"
                        app:switchBkgNotCheckedColor="@android:color/holo_red_dark"
