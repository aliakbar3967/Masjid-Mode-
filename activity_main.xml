                </LinearLayout>


            </RelativeLayout>

            <!--        Esha-->
            <RelativeLayout
                android:id="@+id/relativeLayoutEshar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/layout_backgorund"
                android:elevation="7dp">

                <TextView
                    android:id="@+id/textViewEsha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/text_background"
                    android:text="عشاء"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="35dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewEsha"

                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/buttonTimeStartEsha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape_un_checked"
                        android:elevation="10dp"
                        android:tag="esha"
                        android:text="@string/default_text"
                        android:textColor="@android:color/white"
                        app:layout_widthPercent="50%" />

                    <Button
                        android:id="@+id/buttonTimeEndEsha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape_un_checked"
                        android:elevation="10dp"
                        android:tag="esha"
                        android:text="@string/default_text"
                        android:textColor="@android:color/white"
                        app:layout_widthPercent="50%" />


                    <com.rm.rmswitch.RMSwitch
                        android:id="@+id/toggleSwitchEsha"
                        android:layout_width="90dp"
