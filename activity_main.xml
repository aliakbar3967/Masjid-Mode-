<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="vertical">


            <!--    Fajar-->
            <RelativeLayout

                android:id="@+id/relativeLayoutFajar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:background="@drawable/layout_backgorund"
                android:elevation="7dp">

                <TextView
                    android:id="@+id/textViewFajir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:background="@drawable/text_background"
                    android:text="فجر"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/subLayoutFajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewFajir"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/buttonTimeStartFajar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape_un_checked"
                        android:elevation="10dp"
                        android:tag="fajir"
                        android:text="@string/default_text"
                        android:textColor="@android:color/white"
                        app:layout_widthPercent="50%" />

                    <Button
                        android:id="@+id/buttonTimeEndFajar"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape_un_checked"
                        android:elevation="10dp"
                        android:tag="fajir"
                        android:text="@string/default_text"
                        android:textColor="@android:color/white"
                        app:layout_widthPercent="50%" />

                    <com.rm.rmswitch.RMSwitch
                        android:id="@+id/toggleSwitchFajar"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        app:checked="false"
                        app:enabled="true"
                        app:switchBkgCheckedColor="@android:color/holo_green_dark"
                        app:switchBkgNotCheckedColor="@android:color/holo_red_dark"
                        app:switchDesign="android"
                        app:switchToggleCheckedColor="@color/toggleCheckedBackground"
                        app:switchToggleCheckedImage="@drawable/ic_check"
                        app:switchToggleNotCheckedColor="@color/toggleUnCheckedBackground"
                        app:switchToggleNotCheckedImage="@drawable/ic_clear" />

                </LinearLayout>


            </RelativeLayout>

            <!--    Zohar-->
            <RelativeLayout
                android:id="@+id/relativeLayoutZohar"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:background="@drawable/layout_backgorund"
                android:elevation="7dp">

                <TextView
                    android:id="@+id/textViewZohar"
